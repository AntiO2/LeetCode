    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) LeetCode CMake 编译 & 启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/leetcode_cpp/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb",
            },
            "linux": {
                "MIMode": "gdb"
            },
            "preLaunchTask": "Make Bin",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "envFile": "${workspaceFolder}/.vscode/debug.env"
        }
    ]
}